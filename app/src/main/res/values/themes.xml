<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VezetaaClone" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#00008b</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="MaterialRippleLayout">
        <item name="mrl_rippleOverlay" >true</item>
        <item name="mrl_rippleColor">@color/blue</item>
        <item name="mrl_rippleAlpha" >0.2</item>
    </style>
    <style name="Theme.VezetaaClone.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/finalsplash</item>
    </style>

    <style name="Theme.VezetaaClone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VezetaaClone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.VezetaaClone.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VezetaaClone.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VezetaaClone.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>