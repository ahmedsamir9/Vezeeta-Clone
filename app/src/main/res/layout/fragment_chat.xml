<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="UI.Fragments.ChatListFragment">
    <include layout="@layout/content_chat_frag" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatsReView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/syringe"
        android:visibility="visible"
        tools:visibility="visible"
        android:alpha="0.1"/>

    <ImageView
        android:id="@+id/noMsgsPic"
        android:layout_width="131dp"
        android:layout_height="143dp"
        android:layout_centerInParent="true"
        android:src="@drawable/zeromsgs"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/noMsgsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/noMsgsPic"
        android:text="Your chats will appear here"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="invisible" />


</RelativeLayout>